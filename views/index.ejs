<%- include('partials/header.ejs') %>


    <% if(locals.books) %>
    <hr>
    <h2>Books I've read</h2>
    <% books.forEach((book) => { %>
        <div class="grid-container">
            <div class='cover'><img src='<%= book.cover_url %>'></div>
            <div class="title"><p><%= book.title %> by <%= book.author %></p></div>
            <div class="rating"><p>Date Read: <%= book.date_read %>. Rating: <%= book.rating %>/10</p></div>
            <div class="intro"><p><%= book.notes_intro %></p></div>
            <div class="button">
                <form action="/notes/<%=book.id%>" method="get">
                <input class="btn btn-secondary notes-button" type="submit" value="See Notes" name="notes" id="<%= book.id %>">
            </form></div>
        </div>
 <% }); %> 


</div>
 <%- include('partials/footer.ejs') %>